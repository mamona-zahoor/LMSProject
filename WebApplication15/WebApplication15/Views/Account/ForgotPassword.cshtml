@model WebApplication15.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}
@{
    Layout = null;
}
<meta name="utf-8" content="width=device-width, initial-scale=1">
<style>
    body, html {
        font-family: Calisto MT;
        margin: 0;
        background-image: url("../Images/t.jpeg");
    }

    * {
        box-sizing: border-box;
    }

    .bg-img {
        /* The image used */
        height: 100%;
        width: 100%;
        /* Center and scale the image nicely */
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        position: relative;
    }

    /* Add styles to the form container */
    .container {
        position: absolute;
        right: 400px;
        top: 80px;
        margin: 80px;
        width: 400px;
        padding: 12px;
        background-color: rgba(170, 153, 67, 0.75);
        border: 1px;
        align-content: center;
        border-radius: 1px;
    }

    border {
        border: 1px solid #daf509;
        margin: 25px;
    }

    .text-block {
        color: #fdfdfd;
    }


    /* Set a style for the submit button */
    a {
        text-decoration: none;
        display: inline-block;
        padding: 8px 16px;
    }

        a:hover {
            background-color: #ddd;
            color: black;
        }

    .previous {
        background-color: rgba(58, 60, 2, 0.67);
        color: white;
        font-size: 12px;
    }

    .next {
        background-color: rgba(58, 60, 2, 0.67);
        color: white;
        font-size: 12px;
    }

    .header {
        color: rgba(237, 247, 10, 0.76);
        font-family: serif;
        font-size: 40px;
        text-align: center;
    }

    input {
        border: none;
        box-sizing: border-box;
        border-bottom: 1px solid #ebebeb;
        background: transparent;
        color: #fff;
        font-weight: bold;
        font-family: serif;
        font-size: 20px;
    }


    .submit {
        width: 130px;
        border-radius: 25px;
        -moz-border-radius: 25px;
        -webkit-border-radius: 25px;
        text-transform: uppercase;
        font-size: 13px;
        cursor: pointer;
        color: #000;
    }


    .form-group {
        margin-bottom: 10px;
    }

    .submit-link {
        border: 2px solid #fff;
        text-decoration: none;
        display: inline-block;
        vertical-align: middle;
        padding: 10px 0;
        text-align: center;
        cursor: pointer;
        color: 153;
        background-color: #fff;
    }

        .submit-link:hover {
            background: #6d6d0b;
            color: #000;
        }
</style>

<title> Library Management System</title>
<div class="bg-img">
    <div class="border">
        <form action="/action_page.php" class="container">
            <div class="text-block">

                <h2>@ViewBag.Title</h2>

                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Enter your email.</h4>

                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            &emsp;&emsp;&emsp;  @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;<input type="submit" class="submit-link submit" value="Email Link" />
                        </div>
                    </div>
                }

            </div>
        </form>
    </div>
</div>