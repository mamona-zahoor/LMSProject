@model IEnumerable<WebApplication15.Models.Issued_Books>

@{
    ViewBag.Title = "IssuedBooks";
}

<h2>IssuedBooks</h2>
@using (Html.BeginForm("IssuedBooks", "Admin", FormMethod.Get))
{
    <p>
        <h2>Search by:</h2>
        @Html.RadioButton("searchby", "Number", true)<text>Number</text>
        @Html.RadioButton("searchby", "Email", true)<text>Email</text>
       
        @Html.TextBox("search")<input type="submit" value="search" />

    </p>


}



<p>
    @Html.ActionLink("Add book", "AddIssuedbook")
</p>
