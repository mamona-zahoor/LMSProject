@model WebApplication15.Models.tbl_student

@{
    ViewBag.Title = "Delete Student";
}

<style>
    .submit {
        width: 130px;
        border-radius: 25px;
        -moz-border-radius: 25px;
        -webkit-border-radius: 25px;
        text-transform: unset;
        font-size: 13px;
        cursor: pointer;
        color: #000;
    }


    .submit-link {
        border: 2px solid #fff;
        text-decoration: none;
        display: inline-block;
        vertical-align: middle;
        padding: 10px 0;
        text-align: center;
        cursor: pointer;
        background-color: #6d6d0b;
    }

        .submit-link:hover {
            background: #fff;
            color: #000;
        }
</style>

<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
            &emsp; &emsp; &emsp; &emsp;@Html.DisplayFor(model => model.Name)
        </dt>
        <br />

        <dt>
            @Html.DisplayNameFor(model => model.Email)
            &emsp; &emsp;&emsp; &emsp;@Html.DisplayFor(model => model.Email)
        </dt>
        <br />

        <dt>
            @Html.DisplayNameFor(model => model.Registration_Number)
            &emsp; &emsp;&emsp; &emsp;@Html.DisplayFor(model => model.Registration_Number)
        </dt>
        <br />

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="submit-link submit" onclick="return confirm('Are you sure you want to delete this?')" ; /> |
            @Html.ActionLink("Back to List", "Student")
        </div>
    }
</div>
