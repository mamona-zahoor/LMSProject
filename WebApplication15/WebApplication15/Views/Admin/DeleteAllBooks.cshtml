@model WebApplication15.Models.All_Books

@{
    ViewBag.Title = "Delete Book";
}

<style>
    .submit {
        width: 130px;
        border-radius: 25px;
        -moz-border-radius: 25px;
        -webkit-border-radius: 25px;
        text-transform: unset;
        font-size: 13px;
        cursor: pointer;
        color: #000;
    }


    .submit-link {
        border: 2px solid #fff;
        text-decoration: none;
        display: inline-block;
        vertical-align: middle;
        padding: 10px 0;
        text-align: center;
        cursor: pointer;
        background-color: #6d6d0b;
    }

        .submit-link:hover {
            background: #fff;
            color: #000;
        }
</style>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DeleteAllBooks</title>
</head>
<body>
    <div>
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Number)
                &emsp; &emsp;@Html.DisplayFor(model => model.Number)
            </dt>
            <br />
    
            <dt>
                @Html.DisplayNameFor(model => model.Name)
                &emsp; &emsp; @Html.DisplayFor(model => model.Name)
            </dt>
            <br />
    
            <dt>
                @Html.DisplayNameFor(model => model.Author)
                &emsp; &emsp;@Html.DisplayFor(model => model.Author)
            </dt>
            <br />
    
            <dt>
                @Html.DisplayNameFor(model => model.Edition)
                &emsp; &emsp; @Html.DisplayFor(model => model.Edition)
            </dt>
            <br />
    
            <dt>
                @Html.DisplayNameFor(model => model.Price)
                &emsp; &emsp; @Html.DisplayFor(model => model.Price)
            </dt>
            <br />
    
            <dt>
                @Html.DisplayNameFor(model => model.Status)
                &emsp; &emsp;@Html.DisplayFor(model => model.Status)
            </dt>
            <br />
    
        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="submit-link submit" onclick="return confirm('Are you sure you want to delete this?')"; /> |
                @Html.ActionLink("Back to List", "AllBooks")
            </div>
        }
    </div>
</body>
</html>
