@model WebApplication15.Models.Issued_Books

@{
    ViewBag.Title = "Delete Book";
}
<style>
    .submit {
        width: 130px;
        border-radius: 25px;
        -moz-border-radius: 25px;
        -webkit-border-radius: 25px;
        text-transform: unset;
        font-size: 13px;
        cursor: pointer;
        color: #000;
    }


    .submit-link {
        border: 2px solid #fff;
        text-decoration: none;
        display: inline-block;
        vertical-align: middle;
        padding: 10px 0;
        text-align: center;
        cursor: pointer;
        background-color: #6d6d0b;
    }

        .submit-link:hover {
            background: #fff;
            color: #000;
        }
</style>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DeleteIssuedBooks</title>
</head>
<body>
    <div>
        
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Number)
                &emsp; &emsp;@Html.DisplayFor(model => model.Number)
            </dt>
            <br />
    
            <dt>
                @Html.DisplayNameFor(model => model.Email)
                &emsp; &emsp;@Html.DisplayFor(model => model.Email)
            </dt>
            <br />
    
            <dt>
                @Html.DisplayNameFor(model => model.UserID)
                &emsp; &emsp; @Html.DisplayFor(model => model.UserID)
            </dt>
            <br />
    
            <dt>
                @Html.DisplayNameFor(model => model.Return_date)
                &emsp; &emsp;@Html.DisplayFor(model => model.Return_date)
            </dt>
            <br />
    
            <dt>
                @Html.DisplayNameFor(model => model.Issue_date)
                &emsp; &emsp;@Html.DisplayFor(model => model.Issue_date)
            </dt>
            <br />
    
            <dt>
                @Html.DisplayNameFor(model => model.Due_date)
                &emsp; &emsp;@Html.DisplayFor(model => model.Due_date)
            </dt>
            <br />
    
            <dt>
                @Html.DisplayNameFor(model => model.Fine)
                &emsp; &emsp; @Html.DisplayFor(model => model.Fine)
            </dt>
            <br />
    
            <dt>
                @Html.DisplayNameFor(model => model.Status)
                &emsp; &emsp;@Html.DisplayFor(model => model.Status)
            </dt>
            <br />
    
        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="submit-link submit" onclick="return confirm('Are you sure you want to delete this?')";/> |
                @Html.ActionLink("Back to List", "IssuedBooks")
            </div>
        }
